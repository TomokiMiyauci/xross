{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@share/*": ["../shared/src/*"]
    },
    "jsx": "react",
    "outDir": "dist"
  },
  "references": [{ "path": "../shared" }],

  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
